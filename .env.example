# FinPass Environment Configuration Template
# Copy this file to .env and customize the values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=finpass
POSTGRES_USER=finpass
POSTGRES_PASSWORD=finpass123
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# =============================================================================
# Backend Configuration
# =============================================================================
SPRING_PROFILES_ACTIVE=prod
BACKEND_PORT=8080
BACKEND_HOST=api.localhost

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=80
FRONTEND_HOST=localhost
REACT_APP_API_URL=http://localhost:8080
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Configuration - CHANGE THESE VALUES IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-256-bits
JWT_EXPIRATION=86400000

# =============================================================================
# Blockchain Configuration
# =============================================================================
BLOCKCHAIN_NETWORK=testnet
BLOCKCHAIN_RPC_URL=https://ethereum-goerli.alchemyapi.io/v2/your-api-key
BLOCKCHAIN_PRIVATE_KEY=your-private-key

# =============================================================================
# Application Configuration
# =============================================================================
FINPASS_VERSION=1.0.0
FINPASS_ENVIRONMENT=development

# =============================================================================
# SSL/TLS Configuration (for production)
# =============================================================================
ACME_EMAIL=admin@finpass.io
TRAEFIK_HOST=finpass.io

# =============================================================================
# Monitoring Configuration (optional)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# =============================================================================
# Environment-Specific Overrides
# =============================================================================

# Development Environment
# Uncomment for development
# SPRING_PROFILES_ACTIVE=dev
# FINPASS_ENVIRONMENT=development
# REACT_APP_ENVIRONMENT=development
# BLOCKCHAIN_NETWORK=testnet

# Staging Environment
# Uncomment for staging
# SPRING_PROFILES_ACTIVE=staging
# FINPASS_ENVIRONMENT=staging
# REACT_APP_ENVIRONMENT=staging
# BLOCKCHAIN_NETWORK=testnet
# FRONTEND_HOST=staging.finpass.io
# BACKEND_HOST=api.staging.finpass.io

# Production Environment
# Uncomment for production
# SPRING_PROFILES_ACTIVE=prod
# FINPASS_ENVIRONMENT=production
# REACT_APP_ENVIRONMENT=production
# BLOCKCHAIN_NETWORK=mainnet
# FRONTEND_HOST=finpass.io
# BACKEND_HOST=api.finpass.io
# JWT_SECRET=your-production-jwt-secret-256-bits-minimum
# POSTGRES_PASSWORD=your-production-db-password
# REDIS_PASSWORD=your-production-redis-password

# =============================================================================
# Additional Configuration Options
# =============================================================================

# Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE_PATH=/app/logs/finpass.log

# Performance Tuning
# JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC
# DATABASE_POOL_SIZE=20
# DATABASE_CONNECTION_TIMEOUT=30000

# Feature Flags
# ENABLE_METRICS=true
# ENABLE_TRACING=true
# ENABLE_AUDIT_LOGGING=true

# External Service URLs
# IDENTITY_PROVIDER_URL=https://identity.finpass.io
# PAYMENT_GATEWAY_URL=https://payments.finpass.io
# NOTIFICATION_SERVICE_URL=https://notifications.finpass.io

# Backup Configuration
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=finpass-backups

# Rate Limiting
# RATE_LIMIT_REQUESTS_PER_MINUTE=100
# RATE_LIMIT_BURST_CAPACITY=200
